<h1>Eat-Da-Burger!</h1>

<h2>Burgers to Devour</h2>
<ol>
    {{#each burgers}}
        {{#unless this.devoured}}
            <li>
                {{this.buger_name}}

                <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="1">
                    <button type="submit">DEVOUR!!!</button>
                </form>
            </li>
        {{/unless}}
    {{/each}}
</ol>

<h2>Devoured Burgers</h2>
<ol>
  {{#each burgers}}
    {{#if this.devoured}}
        <li>
            {{this.buger_name}}
        </li>
    {{/if}}
  {{/each}}
</ol>

<h2>Add a burger!</h2>
<form class="create-update-form" action="burgers/create" method="POST">

  <div class="form-group">
    <label for="newBurger">Burger Name:</label>
    <input type="text" id="newBurger" name="burger_name">
  </div>

  <button type="submit">Add Burger</button>
</form>

